{
	"extends": ["@tsconfig/recommended/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
	"compilerOptions": {
		"lib": ["ES2020"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noUncheckedSideEffectImports": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["coverage", "node_modules", "dist", "test"]
}
